marks = []
n = int(input("Enter no of students : "))
for i in range (0,n):
    i=float(input(f"Enter percentage of {i+1} student : "))
    marks.append(i)

print(marks)



def selection_sort(marks):
    n = len(marks)
    for i in range(n):
        min_marks = i
        for j in range(i+1 , n):
            if marks[j] < marks[min_marks]:
                min_marks = j
        marks[i], marks[min_marks] = marks[min_marks], marks[i]
        
    return marks
        
print("a) Marks of student after selection sorting : ", selection_sort(marks))


def bubble_sort(marks):
    n = len(marks)
    for i in range(n):
        for j in range(0, n-1):
            if marks[j] > marks[j+1]:
                marks[j], marks[j+1] = marks[j+1], marks[j]
    return marks

print("b) marks of student after bubble sorting", bubble_sort(marks))



top_5_elements = marks[-5:]
print("Top 5 elements:", top_5_elements)
